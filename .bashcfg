# Modified ls aliases
alias ls='ls --color=auto -Ah'
alias ll='ls -alh'

# Editor setting (kate / nano / vim)
export EDITOR='nano'

# Custom aliases - Set 0
alias b='cd ..'
alias r='cd /'
alias h='cd ~'

# Custom cd function to list directory contents after changing
cd() {
  builtin cd "$@" && ls -lh
}

# alias ver='neofetch '
alias brc='$EDITOR ~/.bashrc'
alias cfg='$EDITOR ~/.bashcfg'
alias aptup='sudo apt-get update && sudo apt update && sudo apt upgrade' # This one can be diff based on the OS dist. (Given is for Debian based systems)
alias c='clear'
alias t='tree'
alias tg='tree --gitignore'
alias cls='clear'
alias q='exit'
alias src='source ~/.bashrc'

